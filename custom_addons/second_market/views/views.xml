<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================================== -->
        <!-- VISTAS PARA ARTÍCULOS -->
        <!-- ========================================== -->

        <!-- Vista List de Artículos -->
        <record id="view_second_market_article_list" model="ir.ui.view">
            <field name="name">second_market.article.list</field>
            <field name="model">second_market.article</field>
            <field name="arch" type="xml">
                <list string="Artículos">
                    <field name="imagen_principal" widget="image" options="{'size': [64, 64]}"
                        class="oe_avatar" string="Imagen" />
                    <field name="nombre" />
                    <field name="id_categoria" />
                    <field name="precio" />
                    <field name="id_propietario" />
                    <field name="localidad" />
                </list>
            </field>
        </record>

        <!-- Vista Form de Artículos -->
        <record id="view_second_market_article_form" model="ir.ui.view">
            <field name="name">second_market.article.form</field>
            <field name="model">second_market.article</field>
            <field name="arch" type="xml">
                <form string="Artículo">
                    <sheet>
                        <group>
                            <group>
                                <field name="id_propietario" />
                                <field name="id_categoria" />
                                <field name="nombre" />
                                <field name="antiguedad" />
                                <field name="estado_producto" />
                            </group>
                            <group>
                                <field name="precio" />
                                <field name="localidad" />
                            </group>
                        </group>
                        <group string="Descripción">
                            <field name="descripcion" />
                        </group>
                        <group string="Etiquetas">
                            <field name="ids_etiquetas" widget="many2many_tags"
                                options="{'color_field': 'color'}" />
                        </group>
                        <group string="Imágenes">
                            <field name="ids_imagenes" mode="kanban">
                                <kanban>
                                    <field name="image" />
                                    <field name="name" />
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <field name="image" widget="image"
                                                        style="max-width: 100px; max-height: 100px;" />
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong>
                                                        <field name="name" />
                                                    </strong>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form>
                                    <group>
                                        <field name="image" widget="image" />
                                        <field name="name" />
                                        <field name="sequence" />
                                    </group>
                                </form>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- VISTAS PARA CATEGORÍAS -->
        <!-- ========================================== -->

        <!-- Vista List de Categorías -->
        <record id="view_second_market_category_list" model="ir.ui.view">
            <field name="name">second_market.category.list</field>
            <field name="model">second_market.category</field>
            <field name="arch" type="xml">
                <list string="Categorías">
                    <field name="name" />
                    <field name="descripcion" />
                </list>
            </field>
        </record>

        <!-- Vista Form de Categorías -->
        <record id="view_second_market_category_form" model="ir.ui.view">
            <field name="name">second_market.category.form</field>
            <field name="model">second_market.category</field>
            <field name="arch" type="xml">
                <form string="Categoría">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="descripcion" />
                            <field name="imagen" widget="image" class="oe_avatar" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- VISTAS PARA ETIQUETAS -->
        <!-- ========================================== -->

        <record id="view_second_market_tag_list" model="ir.ui.view">
            <field name="name">second_market.tag.list</field>
            <field name="model">second_market.tag</field>
            <field name="arch" type="xml">
                <list string="Etiquetas" editable="bottom">
                    <field name="name" />
                    <field name="color" widget="color_picker" />
                </list>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- ACCIONES -->
        <!-- ========================================== -->

        <record id="action_second_market_article" model="ir.actions.act_window">
            <field name="name">Artículos</field>
            <field name="res_model">second_market.article</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="action_second_market_category" model="ir.actions.act_window">
            <field name="name">Categorías</field>
            <field name="res_model">second_market.category</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="action_second_market_tag" model="ir.actions.act_window">
            <field name="name">Etiquetas</field>
            <field name="res_model">second_market.tag</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- ========================================== -->
        <!-- SUBMENÚS -->
        <!-- ========================================== -->

        <menuitem id="menu_second_market_articles"
            name="Artículos"
            parent="menu_second_market_root"
            action="action_second_market_article"
            sequence="10" />

        <menuitem id="menu_second_market_categories"
            name="Categorías"
            parent="menu_second_market_root"
            action="action_second_market_category"
            sequence="20" />

        <menuitem id="menu_second_market_tags"
            name="Etiquetas"
            parent="menu_second_market_root"
            action="action_second_market_tag"
            sequence="30" />

    </data>
</odoo>
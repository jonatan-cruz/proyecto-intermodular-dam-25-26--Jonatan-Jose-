<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- ========================================== -->
        <!-- VISTAS PARA ETIQUETAS -->
        <!-- ========================================== -->

        <record id="view_second_market_tag_list" model="ir.ui.view">
            <field name="name">second_market.tag.list</field>
            <field name="model">second_market.tag</field>
            <field name="arch" type="xml">
                <list string="Etiquetas" editable="bottom">
                    <field name="name" />
                    <field name="color" widget="color_picker" />
                </list>
            </field>
        </record>

        <!-- ========================================== -->
        <!-- ACCIONES -->
        <!-- ========================================== -->

        

        <record id="action_second_market_tag" model="ir.actions.act_window">
            <field name="name">Etiquetas</field>
            <field name="res_model">second_market.tag</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- ========================================== -->
        <!-- SUBMENÃšS -->
        <!-- ========================================== -->

        <menuitem id="menu_second_market_tags"
            name="Etiquetas"
            parent="menu_second_market_root"
            action="action_second_market_tag"
            sequence="30" />

    </data>
</odoo>
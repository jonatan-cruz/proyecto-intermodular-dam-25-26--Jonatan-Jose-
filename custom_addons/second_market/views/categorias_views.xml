<odoo>
    <data>
        <!-- ========================================== -->
        <!-- VISTAS PARA CATEGORÍAS -->
        <!-- ========================================== -->

        <!-- Vista List de Categorías -->
        <record id="view_second_market_category_list" model="ir.ui.view">
            <field name="name">second_market.category.list</field>
            <field name="model">second_market.category</field>
            <field name="arch" type="xml">
                <list string="Categorías">
                    <field name="name" />
                    <field name="descripcion" />
                </list>
            </field>
        </record>

        <!-- Vista Form de Categorías -->
        <record id="view_second_market_category_form" model="ir.ui.view">
            <field name="name">second_market.category.form</field>
            <field name="model">second_market.category</field>
            <field name="arch" type="xml">
                <form string="Categoría">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="descripcion" />
                            <field name="imagen" widget="image" class="oe_avatar" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_second_market_category" model="ir.actions.act_window">
            <field name="name">Categorías</field>
            <field name="res_model">second_market.category</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Vista de búsqueda/filtros de Categorías -->
        <record id="view_second_market_category_search" model="ir.ui.view">
            <field name="name">second_market.category.search</field>
            <field name="model">second_market.category</field>
            <field name="arch" type="xml">
                <search string="Buscar Categorías">
                    <field name="name" />
                    <group expand="0" string="Agrupar Por">
                        <filter string="Categorías con más artículos" name="group_conteo"
                            context="{'group_by': 'conteo_articulos'}" />
                    </group>
                </search>
            </field>
        </record>

        <menuitem id="menu_second_market_categories" name="Categorías"
            parent="menu_second_market_root" action="action_second_market_category" sequence="20" />
    </data>
</odoo>
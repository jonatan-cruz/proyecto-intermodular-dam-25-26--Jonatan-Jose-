<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de árbol (lista) -->
    <record id="view_second_market_report_list" model="ir.ui.view">
        <field name="name">second_market.report.list</field>
        <field name="model">second_market.report</field>
        <field name="arch" type="xml">
            <list string="Denuncias" decoration-danger="prioridad=='urgente'"
                decoration-warning="prioridad=='alta'" decoration-info="estado=='pendiente'">
                <field name="num_denuncia" />
                <field name="tipo_denuncia" />
                <field name="id_denunciante" />
                <field name="motivo" />
                <field name="prioridad" widget="badge" />
                <field name="estado" widget="badge" decoration-success="estado=='resuelta'"
                    decoration-danger="estado=='pendiente'"
                    decoration-warning="estado=='en_revision'"
                    decoration-muted="estado=='rechazada' or estado=='cerrada'" />
                <field name="id_moderador" />
                <field name="create_date" />
            </list>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_second_market_report_form" model="ir.ui.view">
        <field name="name">second_market.report.form</field>
        <field name="model">second_market.report</field>
        <field name="arch" type="xml">
            <form string="Denuncia">
                <header>
                    <button name="accion_asignar_moderador" string="Asignarme" type="object"
                        class="oe_highlight" invisible="estado not in ['pendiente']" />
                    <button name="accion_resolver" string="Resolver" type="object"
                        class="oe_highlight" invisible="estado != 'en_revision'" />
                    <button name="accion_rechazar" string="Rechazar" type="object"
                        invisible="estado != 'en_revision'" />
                    <button name="accion_cerrar" string="Cerrar" type="object"
                        invisible="estado not in ['resuelta', 'rechazada']" />
                    <button name="accion_ver_articulo" string="Ver Artículo" type="object"
                        class="btn-link" invisible="tipo_denuncia != 'articulo'" />
                    <field name="estado" widget="statusbar"
                        statusbar_visible="pendiente,en_revision,resuelta" />
                </header>

                <sheet>

                    <group>
                        <group>
                            <field name="num_denuncia" readonly="1" force_save="1" />
                            <field name="id_denunciante" readonly="estado != 'pendiente'"
                                required="True" />
                            <field name="id_articulo" readonly="estado != 'pendiente'"
                                invisible="tipo_denuncia != 'articulo'"
                                required="tipo_denuncia == 'articulo'" />
                            <field name="id_comentario" readonly="estado != 'pendiente'"
                                invisible="tipo_denuncia != 'comentario'"
                                required="tipo_denuncia == 'comentario'" />
                            <field name="motivo" readonly="estado != 'pendiente'" />
                            <field name="prioridad" />
                        </group>
                        <group>
                            <field name="tipo_denuncia" readonly="estado != 'pendiente'" />
                            <field name="estado" readonly="1" />
                            <field name="fecha_resolucion" readonly="1" />
                        </group>
                    </group>

                    <group string="Descripción">
                        <field name="descripcion" nolabel="1"
                            placeholder="Describe el motivo de la denuncia..."
                            readonly="estado != 'pendiente'" />
                    </group>

                    <group string="Resolución y Acciones" invisible="estado == 'pendiente'">
                        <field name="accion_tomada" readonly="estado not in ['en_revision']" />
                        <field name="resolucion" readonly="estado not in ['en_revision']"
                            required="estado == 'en_revision'" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Vista de búsqueda/filtros -->
    <record id="view_second_market_report_search" model="ir.ui.view">
        <field name="name">second_market.report.search</field>
        <field name="model">second_market.report</field>
        <field name="arch" type="xml">
            <search string="Buscar Denuncias">
                <field name="num_denuncia" />
                <field name="id_denunciante" />
                <field name="id_articulo" />
                <field name="id_comentario" />
                <field name="motivo" />
                <field name="id_moderador" />

                <separator />
                <filter string="Pendientes" name="pendientes"
                    domain="[('estado', '=', 'pendiente')]" />
                <filter string="En Revisión" name="en_revision"
                    domain="[('estado', '=', 'en_revision')]" />
                <filter string="Resueltas" name="resueltas" domain="[('estado', '=', 'resuelta')]" />
                <filter string="Rechazadas" name="rechazadas"
                    domain="[('estado', '=', 'rechazada')]" />

                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_estado" context="{'group_by': 'estado'}" />
                    <filter string="Prioridad" name="group_prioridad"
                        context="{'group_by': 'prioridad'}" />
                    <filter string="Tipo" name="group_tipo" context="{'group_by': 'tipo_denuncia'}" />
                    <filter string="Moderador" name="group_moderador"
                        context="{'group_by': 'id_moderador'}" />
                    <filter string="Motivo" name="group_motivo" context="{'group_by': 'motivo'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Vista Graph de Denuncias -->
    <record id="view_second_market_report_graph" model="ir.ui.view">
        <field name="name">second_market.report.graph</field>
        <field name="model">second_market.report</field>
        <field name="arch" type="xml">
            <graph string="Denuncias por tipo" type="bar" sample="1">
                <field name="tipo_denuncia" type="row" />
            </graph>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_second_market_report" model="ir.actions.act_window">
        <field name="name">Denuncias</field>
        <field name="res_model">second_market.report</field>
        <field name="view_mode">list,form,graph</field>
        <field name="context">{'search_default_pendientes': 1, 'search_default_activas': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear la primera denuncia
            </p>
            <p>
                Las denuncias permiten a los usuarios reportar contenido inapropiado,
                spam o artículos sospechosos.
            </p>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_second_market_reports" name="Denuncias" parent="menu_second_market_root"
        action="action_second_market_report" sequence="50" />

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de árbol (lista) -->
    <record id="view_second_market_report_list" model="ir.ui.view">
        <field name="name">second.market.report.list</field>
        <field name="model">second_market.report</field>
        <field name="arch" type="xml">
            <list string="Denuncias" decoration-danger="prioridad=='urgente'"
                decoration-warning="prioridad=='alta'" decoration-info="estado=='pendiente'">
                <field name="nombre" />
                <field name="tipo_denuncia" />
                <field name="id_denunciante" />
                <field name="nombre_denunciado" />
                <field name="motivo" />
                <field name="prioridad" widget="badge" />
                <field name="estado" widget="badge"
                    decoration-success="estado=='resuelta'"
                    decoration-danger="estado=='pendiente'"
                    decoration-warning="estado=='en_revision'"
                    decoration-muted="estado=='rechazada' or estado=='cerrada'" />
                <field name="id_moderador" />
                <field name="create_date" />
            </list>
        </field>
    </record>

    <!-- Vista de formulario -->
    <record id="view_second_market_report_form" model="ir.ui.view">
        <field name="name">second.market.report.form</field>
        <field name="model">second_market.report</field>
        <field name="arch" type="xml">
            <form string="Denuncia">
                <header>
                    <button name="accion_asignar_moderador" string="Asignarme"
                        type="object" class="oe_highlight"
                        invisible="estado not in ['pendiente']" />
                    <button name="accion_resolver" string="Resolver"
                        type="object" class="oe_highlight"
                        invisible="estado != 'en_revision'" />
                    <button name="accion_rechazar" string="Rechazar"
                        type="object"
                        invisible="estado != 'en_revision'" />
                    <button name="accion_cerrar" string="Cerrar"
                        type="object"
                        invisible="estado not in ['resuelta', 'rechazada']" />
                    <button name="accion_ver_articulo" string="Ver Artículo"
                        type="object" class="btn-link"
                        invisible="tipo_denuncia != 'articulo'" />
                    <field name="estado" widget="statusbar"
                        statusbar_visible="pendiente,en_revision,resuelta" />
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Botones de stats -->
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="nombre" readonly="1" />
                        </h1>
                    </div>

                    <group>
                        <group name="info_denuncia">
                            <field name="tipo_denuncia" readonly="estado != 'pendiente'" />
                            <field name="id_articulo"
                                invisible="tipo_denuncia != 'articulo'"
                                readonly="estado != 'pendiente'"
                                required="tipo_denuncia == 'articulo'" />
                            <field name="id_comentario"
                                invisible="tipo_denuncia != 'comentario'"
                                readonly="estado != 'pendiente'"
                                required="tipo_denuncia == 'comentario'" />
                            <field name="motivo" readonly="estado != 'pendiente'" />
                            <field name="prioridad" />
                        </group>

                        <group name="info_usuarios">
                            <field name="id_denunciante" readonly="1" />
                            <field name="nombre_denunciado" readonly="1" />
                            <field name="id_moderador" />
                            <field name="activo" widget="boolean_toggle" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Descripción" name="descripcion">
                            <group>
                                <field name="descripcion"
                                    placeholder="Describe el motivo de la denuncia..."
                                    readonly="estado != 'pendiente'" />
                            </group>
                        </page>

                        <page string="Resolución" name="resolucion">
                            <group>
                                <field name="resolucion"
                                    placeholder="Describe la resolución aplicada..."
                                    readonly="estado in ['cerrada']" />
                                <field name="accion_tomada"
                                    readonly="estado in ['cerrada']" />
                                <field name="fecha_resolucion" readonly="1" />
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter para seguimiento y mensajes -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_second_market_report_kanban" model="ir.ui.view">
        <field name="name">second.market.report.kanban</field>
        <field name="model">second_market.report</field>
        <field name="arch" type="xml">
            <kanban default_group_by="estado" class="o_kanban_small_column">
                <field name="nombre" />
                <field name="tipo_denuncia" />
                <field name="motivo" />
                <field name="prioridad" />
                <field name="estado" />
                <field name="id_denunciante" />
                <field name="nombre_denunciado" />
                <field name="id_moderador" />
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="nombre" />
                                </strong>
                                <div class="o_kanban_tags_section">
                                    <span class="badge badge-pill"
                                        t-attf-class="badge-{{record.prioridad.raw_value == 'urgente' ? 'danger' : record.prioridad.raw_value == 'alta' ? 'warning' : 'info'}}">
                                        <field name="prioridad" />
                                    </span>
                                </div>
                                <ul>
                                    <li>
                                        <i class="fa fa-flag" />
                                        <field name="motivo" />
                                    </li>
                                    <li><i class="fa fa-user" /> Denunciante: <field
                                            name="id_denunciante" /></li>
                                    <li><i class="fa fa-user-circle" /> Denunciado: <field
                                            name="nombre_denunciado" /></li>
                                    <li t-if="record.id_moderador.raw_value">
                                        <i class="fa fa-shield" /> Moderador: <field
                                            name="id_moderador" />
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista de búsqueda/filtros -->
    <record id="view_second_market_report_search" model="ir.ui.view">
        <field name="name">second.market.report.search</field>
        <field name="model">second_market.report</field>
        <field name="arch" type="xml">
            <search string="Buscar Denuncias">
                <field name="nombre" />
                <field name="id_denunciante" />
                <field name="nombre_denunciado" />
                <field name="id_articulo" />
                <field name="motivo" />

                <filter string="Pendientes" name="pendientes"
                    domain="[('estado', '=', 'pendiente')]" />
                <filter string="En Revisión" name="en_revision"
                    domain="[('estado', '=', 'en_revision')]" />
                <filter string="Mis Denuncias" name="mis_denuncias"
                    domain="[('id_moderador', '=', uid)]" />

                <separator />
                <filter string="Prioridad Alta" name="prioridad_alta"
                    domain="[('prioridad', 'in', ['alta', 'urgente'])]" />
                <filter string="Sobre Artículos" name="sobre_articulos"
                    domain="[('tipo_denuncia', '=', 'articulo')]" />
                <filter string="Sobre Comentarios" name="sobre_comentarios"
                    domain="[('tipo_denuncia', '=', 'comentario')]" />

                <separator />
                <filter string="Activas" name="activas"
                    domain="[('activo', '=', True)]" />
                <filter string="Archivadas" name="archivadas"
                    domain="[('activo', '=', False)]" />

                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_estado"
                        context="{'group_by': 'estado'}" />
                    <filter string="Prioridad" name="group_prioridad"
                        context="{'group_by': 'prioridad'}" />
                    <filter string="Tipo" name="group_tipo"
                        context="{'group_by': 'tipo_denuncia'}" />
                    <filter string="Moderador" name="group_moderador"
                        context="{'group_by': 'id_moderador'}" />
                    <filter string="Motivo" name="group_motivo"
                        context="{'group_by': 'motivo'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_second_market_report" model="ir.actions.act_window">
        <field name="name">Denuncias</field>
        <field name="res_model">second_market.report</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_pendientes': 1, 'search_default_activas': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear la primera denuncia
            </p>
            <p>
                Las denuncias permiten a los usuarios reportar contenido inapropiado,
                spam o artículos sospechosos.
            </p>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_second_market_reports"
        name="Denuncias"
        parent="menu_second_market_root"
        action="action_second_market_report"
        sequence="50" />

</odoo>